// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model product {
  id              Int      @id @default(autoincrement())
  title           String 
  description     String
  categories      String
  quantity        Float    @default(0)
  price           Float    @default(0)
  image           String
}